# OAuth2 Server Configuration for Local Development
PORT=8080
DATABASE_NAME=oauth2_server
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CLIENT_ID=frontend-client
CLIENT_SECRET=oauth2-secret
REDIRECT_URL=http://authy.docker.local/callback
AUTH_SERVER_URL=http://oauth2.docker.local:8080/oauth/authorize
TOKEN_SERVER_URL=http://oauth2.docker.local:8080/oauth/token

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_PORT=27017

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_API_URL=http://oauth2.docker.local:8080

# Social Login Providers (configured for local development with docker hostnames)
# Google OAuth 2.0 - https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://oauth2.docker.local:8080/auth/google/callback

# GitHub OAuth App - https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URL=http://oauth2.docker.local:8080/auth/github/callback

# Facebook App - https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URL=http://oauth2.docker.local:8080/auth/facebook/callback

# Apple Sign In - https://developer.apple.com/account/resources/identifiers/list/serviceId
APPLE_CLIENT_ID=your.apple.service.id
APPLE_CLIENT_SECRET=your-apple-private-key-jwt
APPLE_REDIRECT_URL=http://oauth2.docker.local:8080/auth/apple/callback

# Optional: MongoDB Express (database management UI)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=password123